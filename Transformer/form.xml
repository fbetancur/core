  <h:body>
    <group appearance="field-list" ref="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic">
      <label>Información</label>
      <select1 appearance="minimal" ref="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality">
        <label>Por favor seleccione el municipio desde el cual participará en la actividad:</label>
        <itemset nodeset="instance('municipality')/root/item">
          <value ref="name"/>
          <label ref="label"/>
        </itemset>
      </select1>
      <input ref="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/o_municipality">
        <label>¿Cuál?</label>
      </input>
      <select1 appearance="autocomplete" ref="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/district">
        <label>Por favor indique su barrio de residencia:</label>
        <itemset nodeset="instance('district')/root/item">
          <value ref="name"/>
          <label ref="label"/>
        </itemset>
      </select1>
      <input ref="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/name1">
        <label>Por favor registre su primer nombre:</label>
      </input>
    </group>
  </h:body>
