      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/today" jr:preload="date" type="date" jr:preloadParams="today"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic" required="false()"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality" type="string" required="true()"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/o_municipality" type="string" relevant=" /a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality  = '00000'" required="true()"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality_L" type="string" required="false()" calculate="jr:choice-name( /a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality ,' /a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality ')"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/o_municipality_L" type="string" required="false()" calculate="jr:choice-name( /a4s6ZKKP6zfrjSXsZm7SFA/Demographic/o_municipality ,' /a4s6ZKKP6zfrjSXsZm7SFA/Demographic/o_municipality ')"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/district" type="string" relevant=" /a4s6ZKKP6zfrjSXsZm7SFA/Demographic/municipality  = '76001'" required="true()"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/Demographic/name1" type="string" required="true()" constraint="regex(.,'^[A-Z a-zÑñáéíóúÁÉÍÓÚ]{3,150}$')" jr:constraintMsg="Por favor ingrese mínimo tres caracteres"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/meta/audit" type="binary"/>
      <bind nodeset="/a4s6ZKKP6zfrjSXsZm7SFA/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
